// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  address String @unique
  nickname String?
  audioNFTs AudioNFT[]
  balanceOfAudioNFT BalanceOfAudioNFT?
}

model UploadAudio {
  id Int @id @default(autoincrement())
  title String?
  description String?
  audioUrl String?
  audioSize Int?
  encryptedAudioCID String?
  symmetricKey String?
  previewAudioCID String?
}

model Image {
  id Int @id @default(autoincrement())
  replicateId String
  imageUrl String
  prompt String
  jacketCID String?
}

model AudioNFT {
  id Int @id @default(autoincrement())
  chainId Int
  contractAddress String
  tokenId Int
  title String
  encryptedAudioCID String
  encryptedSymmetricKey String
  jacketImageCID String
  creatorAddress String
  previewAudioCID String
  creator         User     @relation(fields: [creatorAddress], references: [address])
  balanceOfAudioNFT BalanceOfAudioNFT?

  @@unique([chainId, contractAddress, tokenId])
}

model AlterTemplate {
  id Int @id @default(autoincrement())
  name String
  thumbnailUrl String
  roomUrl String
}

model Alter {
  id Int @id @default(autoincrement())
  templateId Int
  title String
  description String
  creatorId Int
  arrangementData Json
}

model BalanceOfAudioNFT {
  id Int @id @default(autoincrement())
  userAddress String @unique
  chainId Int
  contractAddress String
  tokenId Int
  balance Int
  user User @relation(fields: [userAddress], references: [address])
  audioNFT AudioNFT @relation(fields: [chainId, contractAddress, tokenId], references: [chainId, contractAddress, tokenId])

  @@unique([chainId, contractAddress, tokenId])
}
